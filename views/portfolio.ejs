<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="/public/css/portfolio.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <title>Cryptex</title>
    <link rel="shortcut icon" href="./public/icons/favicon.svg" type="image/svg+xml" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.min.js" integrity="sha512-WW8/jxkELe2CAiE4LvQfwm1rajOS8PHasCCx+knHG0gBHt8EXxS6T6tJRTGuDQVnluuAvMxWF4j8SNFDKceLFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="/" class="brand">
            <img src="/public/images/logo.svg" width="32" height="32" alt="Cryptex logo" class='bx bxs-smile'/>
            <span class="text">RideRev</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="#">
                    <i class='bx bxs-dashboard' ></i>
                    <span class="text">Portfolio</span>
                </a>
            </li>
            <li>
                <a href="/my_store">
                    <i class='bx bxs-shopping-bag-alt' ></i>
                    <span class="text">My Store</span>
                </a>
            </li>
            <li>
                <a href="/index">
                    <i class='bx bxs-doughnut-chart' ></i>
                    <span class="text">Analytics</span>
                </a>
            </li>
            <li>
                <a href="/my_store">
                    <i class='bx bxs-message-dots' ></i>
                    <span class="text">Wallet</span>
                </a>
            </li>
            <li>
                <a href="/watchlist">
                    <i class='bx bxs-book-reader' ></i>
                    <span class="text">Watchlist</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog' ></i>
                    <span class="text"id='profile'>Settings</span>
                </a>
            </li>
            <li>
                <a href="/logout" class="logout">
                    <i class='bx bxs-log-out-circle' ></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu' ></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell' ></i>
                <span class="num">7</span>
            </a>
            <a href="/userprofile" class="profile">
                <img src="data:image/png;base64,<%= image %>">
            </a>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main >
            <% if (status == "0") { %>
                <div class="alert alert-danger pl-2" role="alert">
                  Payment Not Successful
                </div>
              <% } else if (status == 1) { %>
                <div class="alert alert-success pl-2" role="alert">
                  Payment Executed Successfully
                </div>
              <% } %>
              
            <div class="head-title">
                <div class="left">
                    <h1>Portfolio</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Portfolio</a>
                        </li>
                        <li><i class='bx bx-chevron-right' ></i></li>
                        <li>
                            <a class="active" href="#">Home</a>
                        </li>
                    </ul>
                </div>
                <div id="pdf-download">
                    <a href="#" class="btn-download" >
                        <i class='bx bxs-cloud-download' ></i>
                        <span class="text">Download PDF</span>
                    </a>
                </div>
                
            </div>
            <div id ='download-container'>

            
            <ul class="box-info" id="box-info-id">
                <li>
                    <i class='bx bxs-calendar-check' ></i>
                    <span class="text">
                        <h3><%= trans %></h3>
                        <p>Recent Transactions</p>
                    </span>
                </li>
                <li>
                    <i class='bx bxs-group' ></i>
                    <span class="text">
                        <h3><%= data.friendInvited%></h3>
                        <p>Friends Invited</p>
                    </span>
                </li>
                <li>
                    <i class='bx bxs-dollar-circle' ></i>
                    <span class "text">
                        <h3>$<%= data.Balance%> </h3>
                        <p>Total Balance</p>
                    </span>
                </li>
            </ul>
            <div class="table-data" id="box-info-id-2">
                <div class="order">
                    <div class="head">
                        <h3>Your Assets</h3>
                        <i class='bx bx-search' ></i>
                        <i class='bx bx-filter' ></i>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Assets</th>
                                <th>Quantity</th>
                                <th>Buy Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data && data.priceholdings && data.priceholdings.length > 0) { %>
                                <% for (let i = 0; i < data.priceholdings.length; i++) { %>
                                  <tr>
                                    <td>
                                        <img src="<%= coinImages[i] || '/public/img/default.png' %>">
                                      <p><%= data.priceholdings[i].coinId %></p>
                                    </td>
                                    <td><%= data.priceholdings[i].amount %>  </td>
                                    <td>
                                      <span style="font-weight:bold;">
                                        <%= data.priceholdings[i].buyprice %> $
                                      </span>
                                    </td>  
                                  </tr>
                                <% } %>
                              <% } else { %>
                                <!-- Handle case when transactions array is empty or undefined -->
                              <% } %>
                              
                              
                        </tbody>
                    </table>
                </div>
                <div class="order">
                    <div class="head">
                        <h3>Top Seller</h3>
                        <i class='bx bx-plus' ></i>
                        <i class='bx bx-filter' ></i>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Seller</th>
                                <th>Total Profit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img src="img/seller-02.png">
                                    <p>Alexander</p>
                                </td>
                                <td>$2500,000</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="img/seller-03.png">
                                    <p>William Jeck</p>
                                </td>
                                <td>$2500,000</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="img/seller-04.png">
                                    <p>Henry Jhon</p>
                                </td>
                                <td>$2500,000</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="img/seller-05.png">
                                    <p>James Thomas</p>
                                </td>
                                <td>$2500,000</td>
                            </tr>
                            <tr>
                                <td>
                                    <img src="img/seller-06.png">
                                    <p>Anthony Roy</p>
                                </td>
                                <td>$2500,000</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->
    <script src="/public/js/portfolio.js"></script>
    <script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js"></script>
    <script>
        document.getElementById('profile').addEventListener('click' , () => {
            window.location.href= '/userProfile' 
        })
        document.getElementById('pdf-download').addEventListener('click', () =>{
            const element = document.getElementById('download-container');
            html2pdf(element);
        })
    </script>
</body>
</html>
